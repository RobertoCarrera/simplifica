{
  "version": 2,
  "name": "simplifica",
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/simplifica/browser"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/runtime-config.json",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, proxy-revalidate"
      }
    },
    {
      "src": "/api/import-services",
      "methods": ["OPTIONS", "POST", "GET"],
      "dest": "/api/import-services.ts"
    },
    {
      "src": "/api/import-customers",
      "methods": ["OPTIONS", "POST", "GET"],
      "dest": "/api/import-customers.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {},
  "git": {
    "deploymentEnabled": {
      "*": false,
      "main": true
    }
  }
}
