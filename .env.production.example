# ============================================================================
# GDPR PRODUCTION CONFIGURATION
# ============================================================================
# Copiar estas variables a Vercel > Settings > Environment Variables
# o al dashboard de tu plataforma de hosting
# ============================================================================

# ============================================================================
# 1. ACTIVACIÓN GDPR
# ============================================================================
ENABLE_GDPR=true

# ============================================================================
# 2. DATA PROTECTION OFFICER (DPO)
# ============================================================================
GDPR_DPO_NAME=Roberto Carrera
GDPR_DPO_EMAIL=dpo@digitalizamostupyme.com
GDPR_DPO_PHONE=+34 XXX XXX XXX

# ============================================================================
# 3. RETENCIÓN DE DATOS (Legislación Española)
# ============================================================================
# 7 años = 2555 días (requisito legal español para datos contables/fiscales)
GDPR_AUTO_DELETE_AFTER_DAYS=2555
GDPR_RETENTION_YEARS=7

# ============================================================================
# 4. NOTIFICACIONES DE BRECHAS DE SEGURIDAD
# ============================================================================
# AEPD - Agencia Española de Protección de Datos
GDPR_BREACH_NOTIFICATION_EMAIL=notificaciones@aepd.es
GDPR_BREACH_NOTIFICATION_HOURS=72

# Email interno para alertas de seguridad
GDPR_SECURITY_ALERT_EMAIL=seguridad@digitalizamostupyme.com

# ============================================================================
# 5. PLAZOS DE RESPUESTA (Días naturales)
# ============================================================================
# Art. 12.3 GDPR: Responder en 1 mes, prorrogable 2 meses más
GDPR_ACCESS_REQUEST_DEADLINE_DAYS=30
GDPR_DELETION_REQUEST_DEADLINE_DAYS=30
GDPR_RECTIFICATION_REQUEST_DEADLINE_DAYS=15
GDPR_PORTABILITY_REQUEST_DEADLINE_DAYS=30

# ============================================================================
# 6. URLs LEGALES
# ============================================================================
GDPR_PRIVACY_POLICY_URL=https://digitalizamostupyme.com/privacidad
GDPR_TERMS_URL=https://digitalizamostupyme.com/terminos
GDPR_COOKIES_URL=https://digitalizamostupyme.com/cookies
GDPR_LEGAL_NOTICE_URL=https://digitalizamostupyme.com/aviso-legal

# ============================================================================
# 7. CONFIGURACIÓN DE CONSENTIMIENTOS
# ============================================================================
# Requiere consentimiento explícito (no opt-out)
GDPR_REQUIRE_EXPLICIT_CONSENT=true

# Permite opt-in para marketing
GDPR_ALLOW_MARKETING_OPT_IN=true

# Registra todos los cambios de consentimiento
GDPR_TRACK_CONSENT_CHANGES=true

# ============================================================================
# 8. AUDITORÍA Y LOGGING
# ============================================================================
# Habilitar log de auditoría GDPR
GDPR_ENABLE_AUDIT_LOG=true

# Retención de logs de auditoría (2 años)
GDPR_AUDIT_LOG_RETENTION_DAYS=730

# Nivel de detalle del log (basic, detailed, full)
GDPR_AUDIT_LOG_LEVEL=detailed

# ============================================================================
# 9. EXPORTACIÓN DE DATOS (Art. 20 - Portabilidad)
# ============================================================================
# Formato de exportación (json, csv, xml)
GDPR_EXPORT_FORMAT=json

# Incluir datos históricos en exportación
GDPR_EXPORT_INCLUDE_HISTORY=true

# Cifrar archivos de exportación
GDPR_EXPORT_ENCRYPT=true

# ============================================================================
# 10. ANONIMIZACIÓN AUTOMÁTICA
# ============================================================================
# Activar anonimización automática al expirar retención
GDPR_AUTO_ANONYMIZE_ENABLED=true

# Días de gracia antes de anonimizar (30 días)
GDPR_ANONYMIZE_GRACE_PERIOD_DAYS=30

# ============================================================================
# 11. MENORES DE EDAD (NO APLICABLE - pero incluido por completitud)
# ============================================================================
# Tu aplicación NO tiene menores, pero si cambia en el futuro:
GDPR_MINORS_ENABLED=false
GDPR_MINIMUM_AGE=18
GDPR_REQUIRE_PARENTAL_CONSENT=false

# ============================================================================
# 12. TRANSFERENCIAS INTERNACIONALES
# ============================================================================
# Región de Supabase (EU - Frankfurt)
GDPR_DATA_REGION=EU
GDPR_DATA_LOCATION=Frankfurt, Germany

# Transferencias fuera de EU permitidas (false = solo EU)
GDPR_ALLOW_INTERNATIONAL_TRANSFERS=false

# ============================================================================
# 13. CONFIGURACIÓN DE DESARROLLO (Solo para .env.local)
# ============================================================================
# En desarrollo, usar valores más permisivos:
# GDPR_AUTO_DELETE_AFTER_DAYS=90
# GDPR_AUDIT_LOG_LEVEL=full
# GDPR_EXPORT_ENCRYPT=false

# ============================================================================
# INSTRUCCIONES DE DEPLOYMENT
# ============================================================================
# 
# VERCEL:
# 1. Ir a: https://vercel.com/tu-proyecto/settings/environment-variables
# 2. Copiar cada variable de arriba
# 3. Seleccionar: Production, Preview, Development (según necesites)
# 4. Click "Save"
# 5. Redeploy la aplicación
#
# OTRAS PLATAFORMAS:
# - Netlify: Site settings > Environment variables
# - Railway: Variables tab
# - Render: Environment tab
# - AWS: Parameter Store o Secrets Manager
#
# ============================================================================
