{
  "name": "simplifica",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "import-server": "node scripts/import-server.js",
    "prestart": "node scripts/generate-runtime-config.mjs",
    "start": "ng serve",
    "config:local": "node scripts/set-env.js local",
    "config:prod": "node scripts/set-env.js prod",
    "prebuild": "node scripts/generate-runtime-config.mjs",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "analyze": "npm run build:stats && npx source-map-explorer 'dist/simplifica/browser/*.js'",
    "build:vercel": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:simplifica": "node dist/simplifica/server/server.mjs",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "test:unit": "jest",
    "prepare": "husky install",
    "supabase:migrate": "supabase db push",
    "supabase:studio": "supabase studio",
    "supabase:start": "supabase start"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.18",
    "@angular/cdk": "^19.2.18",
    "@angular/common": "^19.2.18",
    
    
    "@angular/forms": "^19.2.18",
    "@angular/platform-browser": "^19.2.18",
    "@angular/platform-browser-dynamic": "^19.2.18",
    "@angular/platform-server": "^19.2.18",
    "@angular/router": "^19.2.18",
    "@angular/ssr": "^19.2.18",
    "@popperjs/core": "^2.11.8",
    "@supabase/supabase-js": "^2.57.2",
    "@tiptap/core": "^3.4.4",
    "@tiptap/extension-image": "^3.4.4",
    "@tiptap/extension-link": "^3.4.4",
    "@tiptap/extension-placeholder": "^3.4.4",
    "@tiptap/pm": "^3.4.4",
    "@tiptap/starter-kit": "^3.4.4",
    "@types/qrcode": "^1.5.5",
    "apexcharts": "^5.3.6",
    "bootstrap-icons": "^1.11.3",
    "dompurify": "^3.3.1",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.1.0",
    "lucide-angular": "^0.560.0",
    "ng-apexcharts": "1.15.0",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.4",
    "rxjs": "~7.8.0",
    "signature_pad": "^5.0.4",
    "supabase": "^2.72.8",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.18",
    "@angular/cli": "^19.2.18",
    "@angular/compiler-cli": "^19.2.18",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.18.0",
    "@types/node-forge": "^1.3.14",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "jasmine-core": "~5.5.0",
    "jest": "^29.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "source-map-explorer": "^2.5.3",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.2",
    "typescript": "~5.7.2"
  },
  "overrides": {
    "qs": "^6.14.2",
    "tar": "^7.5.7",
    "lodash": "^4.17.23",
    "markdown-it": "^14.1.1",
    "webpack": "^5.105.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "qs": "^6.14.2",
      "tar": "^7.5.7",
      "lodash": "^4.17.23",
      "markdown-it": "^14.1.1",
      "webpack": "^5.105.2"
    }
  }
}